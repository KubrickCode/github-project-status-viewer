{
  "manifest_version": 3,
  "name": "GitHub Project Status Viewer",
  "version": "2.0.0",
  "description": "Display GitHub Projects status in issue lists",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*",
    "https://github-project-status-viewer.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
